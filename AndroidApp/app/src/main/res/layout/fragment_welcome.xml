<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="cl.cadcc.folio.MainActivity"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="#e3e2db">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:src="@drawable/tarjeta"
        />

    <TextView
        android:id="@+id/textView_tui"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Acerca la tarjeta, por favor."
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_weight="5"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="O ingresa tu RUT"
        android:gravity="center"
        android:id="@+id/rutField"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/sendRut"
        android:layout_gravity="center_horizontal"
        android:onClick="manuallySendId"/>

</LinearLayout>
